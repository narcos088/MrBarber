@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <form action="action_page.php">
        <div>
            <div class="row clearfix">
                <div class="col-md-1">
                    <label for="uname"><b>Email:</b></label>
                </div>
                <div class="col-md-3">
                    <input type="text" placeholder="Insira Email" name="uname" id="uname" required>
                </div>
            </div> 
            <br />
            <div class="row clearfix">
                <div class="col-md-1">
                    <label for="psw"><b>Password:</b></label>
                </div>
                <div class="col-md-3">
                    <input type="password" placeholder="Insira Password" name="psw" id="psw" required>
                </div>
            </div>

            <div class="container">
                <button type="submit">Login</button>
            </div>
        </div>
    </form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}