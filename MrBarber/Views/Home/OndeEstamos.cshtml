@model MrBarber.Models.Localizacao
@using (Html.BeginForm("OndeEstamos2", "Home",FormMethod.Post))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>My Google Map</title>
        <style>
            #map {
                height: 400px;
                width: 100%;
            }

            #mapCanvas {
                width: 500px;
                height: 400px;
                float: left;
            }

            #infoPanel {
                float: left;
                margin-left: 10px;
            }

                #infoPanel div {
                    margin-bottom: 5px;
                }
        </style>
        <script>
            function initMap() {
                // Map options
                var options = {
                    zoom: 16,
                    center: { lat: 41.557813, lng: -8.399161 }
                }

                // New map
                var map = new google.maps.Map(document.getElementById('mapCanvas'), options);

                // Listen for click on map
                google.maps.event.addListener(map, 'click', function (event) {
                    // Add marker
                    addMarker({ coords: event.latLng });
                    myFunction2(event);
                    myFunction(event);


                    document.getElementById('info').innerHTML = [
                        event.latLng.lat(),
                        event.latLng.lng()
                    ].join(', ');
                });


                // Add Marker Function
                function addMarker(props) {
                    var marker = new google.maps.Marker({
                        position: props.coords,
                        map: map,
                        //icon:props.iconImage
                    });
                }

                function myFunction(event) {
                    document.getElementById("Lat").value = event.latLng.lat();
                }
                function myFunction2(event) {
                    document.getElementById("Lng").value = event.latLng.lng();
                }
            }
        </script>
        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA438QeylcKJSF9flYPpEbnKQGCk5AlvsU&callback=initMap">
        </script>
    </head>
    <body>
        <div id="mapCanvas"></div>
        <div id="infoPanel">
            <b>Marker status:</b>
            <div id="markerStatus"><i>Click and drag the marker.</i></div>
            <b>Current position:</b>
            <div id="info"></div>
            <b>Closest matching address:</b>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="text" name="Lat" id="Lat">
                <input type="text" name="Lng" id="Lng">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </div>

    </body>
</html>
}

