@model MrBarber.Models.Cliente
@{
    ViewBag.Title = "Registo";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Registar", "ClienteController", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <form>
        <fieldset>
            <legend>Registo</legend>
            <div class="form-group">
                <label for="name">Nome</label>
                <input type="text" class="form-control" id="name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="email@example.com">
                <small id="emailHelp" class="form-text text-muted">Para posterior acesso, será uzado o email para o efeito</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword2">Confirme Password</label>
                <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="birthDate">Data Nascimento</label>
                <input type="date" class="form-control" id="birthDate">
            </div>
            <div class="form-group">
                <label for="nif">NIF</label>
                <input type="number" class="form-control" id="nif">
            </div>
            <div class="form-group">
                <label for="tlm">Contacto</label>
                <input type="number" class="form-control" id="tlm">
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </fieldset>
    </form>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }