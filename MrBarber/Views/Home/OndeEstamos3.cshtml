@using (Html.BeginForm("ConfirmaLoc", "Home", FormMethod.Post))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>My Google Map</title>
        <style>
            #map {
                width: 970px;
                height: 400px;
                margin: auto;
                margin-top: 15px;
            }

            #infoPanel {
                float: left;
                margin-left: 10px;
            }

                #infoPanel div {
                    margin-bottom: 5px;
                }

            #button {
                height: 100%;
                width: 100px;
                margin: auto;
                position: relative;
            }

            .block {
                margin-top: 20px;
            }
        </style>
        <script>
            function initMap() {
                // Map options
                var options = {
                    zoom: 16,
                    center: { lat: 41.557813, lng: -8.399161 }
                }

                // New map
                var map = new google.maps.Map(document.getElementById('map'), options);

                // Listen for click on map
                google.maps.event.addListener(map, 'click', function (event) {
                    // Add marker
                    addMarker({ coords: event.latLng });
                    myFunction2(event);
                    myFunction(event);


                    document.getElementById('info').innerHTML = [
                        event.latLng.lat(),
                        event.latLng.lng()
                    ].join(', ');
                });


                // Add Marker Function
                function addMarker(props) {
                    var marker = new google.maps.Marker({
                        position: props.coords,
                        map: map,
                        //icon:props.iconImage
                    });
                }

                function myFunction(event) {
                    document.getElementById("Lat").value = event.latLng.lat();
                }
                function myFunction2(event) {
                    document.getElementById("Lng").value = event.latLng.lng();
                }
            }
        </script>
        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA438QeylcKJSF9flYPpEbnKQGCk5AlvsU&callback=initMap">
        </script>
    </head>
    <body>
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Lamentamos!</strong> Ainda não efetuamos serviços na localização inserida.

        </div>

        <div class="block">
            <h1>Verifique se a sua morada tem cobertura</h1>
            <div class="container container-fluid">
                <div id="map"></div>
            </div>
            <div class="row">
                <div class="col-md-3 col-md-offset-2">
                    <input type="submit" value="Cobertura" id="button" class="btn btn-default" />
                </div>
                <div class="col-md-3">
                    <label for="Lat"><b>Latitude:</b></label>
                    <input type="text" name="Lat" id="Lat">
                </div>
                <div class="col-md-3 ">
                    <label for="Lng"><b>Longitude:</b></label>
                    <input type="text" name="Lng" id="Lng">
                </div>
            </div>
        </div>

    </body>
</html>
}

